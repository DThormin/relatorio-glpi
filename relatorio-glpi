SELECT 
chamado.id,
(select firstname from glpi_users where id = (chamado.users_id_recipient)),
chamado.name,
REPLACE(chamado.content, '&lt;p&gt;', '   ' ),
usuario.name,
REPLACE(atividade.content, '&lt;p&gt;', '   ' ),
tarefa.actual_begin,
tarefa.actual_end,
sec_to_time(tarefa.actual_actiontime),
tarefa.actual_actiontime,

CASE 
WHEN chamado.global_validation = 1 then 'Não está sujeita a aprovação' 
when chamado.global_validation = 3 then 'Concedida' END

FROM glpi_tickets AS chamado


INNER JOIN glpi_tickettasks AS atividade ON chamado.id = atividade.tickets_id
INNER JOIN glpi_plugin_actualtime_tasks AS tarefa ON atividade.id = tarefa.tasks_id
      AND atividade.users_id = tarefa.users_id
INNER JOIN glpi_users AS usuario ON atividade.users_id = usuario.id 

INNER JOIN glpi_tickets_users AS tecnico ON usuario.id  = tecnico.users_id 

    WHERE usuario.name like 'user_glpi_users'
or atividade.users_id_tech = 451
or atividade.users_id = 451
or atividade.users_id_editor = 451
and chamado.status = 6
and chamado.global_validation in (1,3)
AND month(atividade.date_mod) = 08




 